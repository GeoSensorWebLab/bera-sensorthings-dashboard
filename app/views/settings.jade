doctype
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title Dashboard
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel="stylesheet", href="/style.css")

    script(type="text/javascript", src="/templates.js")
    script(type="text/javascript", src="/app.js")

  body
    nav.navbar.navbar-full.navbar-dark.bg-inverse
      include ./app/views/includes/navbar.jade

    div#content.container
      div.row.card
        div.col-sm-12.card-block
          h1.page-header SensorThings URL
            
          noscript
            h1 JavaScript is Not Enabled
            p This site requires JavaScript to be enabled to properly retrieve and display data.
          
          p
            | Change the default SensorThings URL for loading resources.<br>
            | If you have a link with a different SensorThings URL, that will take precedence over this setting although it will not overwrite this setting.
          
          fieldset.form-group
            input#custom-url.form-control(type="text", value="Loadingâ€¦", disabled)
          
          fieldset.form-group
            label Or select a new SensorThings URL
            select#predefined-servers.form-control
              option(value="other") Use above field
              option http://ogc-pilot.sensorup.com:8080/OGCSensorThings/v1.0/
              option http://scratchpad.sensorup.com/OGCSensorThings/v1.0/
          
          p
            button.btn.btn-primary.apply-settings Apply
          
          div#notify
            div.error.alert.alert-danger
            div.success.alert.alert-success
            div.warning.alert.alert-warning
            
    script(type="text/javascript").
      $(function() {
        new App.Views.SettingsView();
      });
